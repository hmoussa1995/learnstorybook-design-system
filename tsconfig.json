{
  "compilerOptions": {
    "declaration": true,
    "types": ["node"],
    "strict": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es2018",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "outDir": "out-tsc",
    "noImplicitAny": false,
    "rootDir": "./"
  },
  "include": ["./src/**/*.ts", "src/TestComponent/TestComponent.test.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}